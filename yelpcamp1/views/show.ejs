<% layout ('/Layout/boilerplate.ejs') %>
<body class="container ">
    <h1>Campground show</h1>
  <h1><%= campground.title  %></h1>
  <h1><%= campground.location  %></h1>
 
  <img class="img-fluid "src="<%=campground.Image%>" alt="">
  <p><%= campground.description%></p>
  <p><%= campground.price%></p>
  <a href="/campgrounds/<%= campground._id%>/edit"><button class="btn btn-primary mb-3"> Update and edit</button></a>
 
 
  <a href="/campgrounds"><button class="btn btn-primary mb-3">All campgrounds</button></a>
  <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
    <button>delete</button>
  </form>
  <h2>Leave a review!</h2>
  <form action="/campgrounds/<%= campground._id%>/reviews" method="post">
    <div class="mb-3" >
      <label class="form-label" for="rating">Rating</label>
      <input class="form-range"type="range" name="review[rating]" id="rating"min="1" max = "5">
    </div>
    <div class="mb-3">
      <label class= "form-label" for="review">Review</label>
      <textarea class="form-control" name="review[body]" id="body" cols="10" rows="3"></textarea>
    </div>
    <button class="btn btn-success">submit</button>
  </form>
</body>