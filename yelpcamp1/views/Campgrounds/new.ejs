<% layout ('/Layout/boilerplate.ejs') %>
<div class="row container">
    <h1 class="text-center">Add New Campground!</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post" enctype="multipart/form-data">

           <div class="mb-3">
            <label for="name" class="form-label">Name
                <input class="form-control" type="text" id="name" name="name">
            </label>
           </div>
       <div class="mb-3">
        <label for="location" class="form-label">location
            <input class="form-control" type="text" id="location" name="location">
    
        </label>
       </div>
       <div class="mb-3">
        <label for="formFile" class="form-label">Add images..</label>
        <input class="form-control" type="file" id="image" name="image" multiple>
      </div>
       <div class="mb-3">
        <label for="description" class="form-label">Description
            <textarea  pd-100 class="form-control" type="text" id="description" name="description"></textarea>
        </label>
        
       </div>
       <div class="mb-3">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="number" id="price" class="form-control" name="price" aria-label="Amount (to the nearest dollar)">
            <span class="input-group-text">.00</span>
        </div>
    </div>
        <button class="btn btn-primary">submit</button>
        </form>
    
        <button class="btn btn-primary mb-3"><a href="/campgrounds" style="color: aliceblue; text-decoration: none;">All campgrounds</a>
        </button>
    </div>
</div>
   