<% layout('/Layout/boilerplate.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="card">
        <img class="img-fluid" src="<%= campground.Image %>" alt="">
        <div class="card-body">
          <h1>Campground show</h1>
          <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" id="name" name="name" class="form-control" value="<%= campground.name %>">
            </div>
            <div class="form-group">
              <label for="price">Price</label>
              <input type="number" id="price" name="price" class="form-control" value="<%= campground.price %>">
            </div>
            <div class="form-group">
              <label for="location">Location</label>
              <input type="text" id="location" name="location" class="form-control" value="<%= campground.location %>">
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <textarea id="description" name="description" class="form-control"><%= campground.description %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
          </form>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">A third item</li>
        </ul>
        <div class="card-body">
          <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary card-link">Update and edit</a>
          <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
