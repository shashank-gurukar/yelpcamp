<% layout ('/Layout/boilerplate.ejs') %>
<body>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <!-- Note: Use POST as the method attribute -->

        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="<%= campground.name %>">
        <!-- Note: Removed unnecessary nested label element -->

        <label for="location">Location</label>
        <input type="text" id="location" name="location" value="<%= campground.location %>">
        <!-- Note: Updated label text to "Location" for consistency -->

        <button type="submit">Submit</button>
        <!-- Note: Changed button type to "submit" for form submission -->
    </form>

    <a href="/campgrounds"><button class="btn btn-primary">All campgrounds
    </button></a>
</body>

